<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal2"
    tools:context=".activity_pantallarecuperarcontrasenia">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/logorecuperarcontrase_a"
            android:layout_marginBottom="100dp"/>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:backgroundTint="#C8C1C1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Recupera tu contraseÃ±a"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:layout_marginLeft="15dp"
            android:textSize="30dp"
            android:background="#C8C1C1"/>

        <TextView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textColor="@color/black"
            android:layout_marginTop="65sp"
            android:text="Indicanos tu correo electronico para enviarte la clave temporal"
            android:textAlignment="center"
            android:textSize="20dp"
            android:background="#C8C1C1"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="60dp"
            android:layout_marginTop="50sp"
            android:backgroundTint="#BBB5B5">

            <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#C8C1C1"
            app:cardCornerRadius="60dp"
            android:layout_gravity="center">
            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:hint="Correo electronico"
                android:textSize="25sp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            </androidx.cardview.widget.CardView>

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnpprincipal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#E69393"
            android:gravity="center"
            android:text="Siguiente"
            android:onClick="pantallaPrincipal"
            android:textColor="@color/black"
            android:layout_marginTop="60dp"/>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
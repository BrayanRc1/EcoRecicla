<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal2"
    tools:context=".categorias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            android:backgroundTint="#ADCA96">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10sp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40sp"
                    android:src="@drawable/papel"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Papel"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="50sp"
                    android:src="@drawable/plastico"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Plastico"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="40sp"
                    android:src="@drawable/vidrio"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Vidrio"
                    android:layout_marginTop="120dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginBottom="15dp"
                    android:textStyle="bold"
                    android:textSize="25sp"/>

            </androidx.cardview.widget.CardView>

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/hueso"
                android:text="Inicio"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
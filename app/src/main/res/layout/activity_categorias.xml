<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal2"
    tools:context=".categorias">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="200dp"
            android:layout_height="60dp"
            app:cardCornerRadius="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="110dp"
            android:backgroundTint="#ADCA96">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categorias"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10sp"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageButton
                    android:layout_width="150dp"
                    android:layout_height="183dp"
                    android:layout_gravity="center"
                    android:contentDescription="imgcategoria"
                    android:onClick="RegistroPapel"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgregistro" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="200dp"
                android:layout_height="170dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="15dp"
                app:cardCornerRadius="15dp">

                <ImageButton
                    android:layout_width="155dp"
                    android:layout_height="190dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-5dp"
                    android:contentDescription="imgcategoria"
                    android:onClick="RegistroGenreal"
                    android:scaleType="centerCrop"
                    android:src="@drawable/imgestadistica" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="130dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="125dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/hueso"
                android:text="Inicio"
                android:onClick="pantallaSesionIniciada"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
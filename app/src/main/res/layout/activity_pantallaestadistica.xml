<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal2"
    android:orientation="vertical"
    tools:context=".pantallaestadistica">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginLeft="80sp"
            android:backgroundTint="@color/azul"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="15dp"
                android:src="@drawable/estadistica" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="165dp"
                android:text="Estadistica"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </androidx.cardview.widget.CardView>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="200dp"
        android:gravity="bottom"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2"
        app:layout_constraintVertical_bias="0.2">

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="90dp"
            android:layout_weight="1"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/verde"
            app:cardCornerRadius="15dp">
            <EditText
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:text="OTROS"
                android:textAlignment="center"
                android:rotation="-90"
                android:layout_marginTop="-15sp"
                android:translationX="-25dp"
                android:textSize="25sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="260dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/verde"
            app:cardCornerRadius="15dp">
            <EditText
                android:layout_width="120dp"
                android:layout_height="270dp"
                android:text="PAPEL"
                android:textAlignment="center"
                android:rotation="-90"
                android:layout_marginTop="80sp"
                android:translationX="-25dp"
                android:textSize="25sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:backgroundTint="@color/verde"
            app:cardCornerRadius="15dp">

            <EditText
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:text="VIDRIO"
                android:textAlignment="center"
                android:rotation="-90"
                android:layout_marginTop="30sp"
                android:translationX="-25dp"
                android:textSize="25sp"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="20dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="25dp"
            android:backgroundTint="@color/verde"
            app:cardCornerRadius="15dp">
            <EditText
                android:layout_width="150dp"
                android:layout_height="160dp"
                android:text="PLASTICO"
                android:textAlignment="center"
                android:rotation="-90"
                android:layout_marginTop="50sp"
                android:translationX="-40dp"                android:textSize="25sp"/>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_marginTop="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
        app:layout_constraintVertical_bias="0.343"
        tools:layout_editor_absoluteX="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Materia reciclable"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cantidad promedio máximo - mínimo."
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white"
            android:text="Inicio"
            android:onClick="pantallaSesionIniciada"
            android:textColor="@color/black"
            android:textSize="25sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
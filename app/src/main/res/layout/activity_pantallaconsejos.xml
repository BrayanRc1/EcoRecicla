<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_principal2"
    tools:context=".activity_pantallainiciosesion">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/azul"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/consejos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="100sp"
                    android:layout_marginTop="115dp"
                    android:text="Consejos"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F5EDED"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/agua" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#F5EDED"
            app:cardCornerRadius="15dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5sp"
                android:src="@drawable/energia" />
        </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/hueso"
                android:text="Agua"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                android:backgroundTint="@color/hueso"
                android:text="Energia"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F5EDED"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/hogar" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="15dp"
                android:backgroundTint="#F5EDED"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/residuos" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:layout_width="170dp"
                android:layout_height="55dp"
                android:layout_marginLeft="30dp"
                android:backgroundTint="@color/hueso"
                android:text="Hogar"
                android:textColor="@color/black"
                android:textSize="25sp" />

            <Button
                android:layout_width="170dp"
                android:layout_height="60dp"
                android:layout_marginLeft="20sp"
                android:backgroundTint="@color/hueso"
                android:text="Residuos"
                android:textColor="@color/black"
                android:textSize="25sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_marginLeft="135dp"
                android:layout_marginTop="05dp"
                android:backgroundTint="#F5EDED"
                app:cardCornerRadius="15dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5sp"
                    android:src="@drawable/recomendaciones" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_width="260dp"
                android:layout_height="55dp"
                android:layout_marginTop="10sp"
                android:layout_marginLeft="75dp"
                android:backgroundTint="@color/hueso"
                android:text="Recomendaciones"
                android:textColor="@color/black"
                android:textSize="25sp" />
            <Button
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:layout_marginLeft="125dp"
                android:backgroundTint="@color/hueso"
                android:text="Inicio"
                android:textColor="@color/black"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>